{% extends 'baseFront.html.twig' %}

{% block title %}{{ 'store.list.title'|trans({},'messages',app.session.get('_locale')) }}{% endblock %}
{% block body %}
<div class="row mt-5">
    <div class="card col-md-6 offset-md-3">
        <div class="card-header">
            <div class="card-title h3 text-black-50 text-center p-2">
                {{ render(path('imageLogo')) }}
                <p class="mt-2">{{ 'login.block_title'|trans }}</p>
            </div>
        </div>
        <div class="card-body">
            <h5 class="mt-0 header-title">
                {{ 'store.list.title'|trans }}
                <span class="triangle-border-left pull-left"></span>
                <span class="triangle-border-right pull-right ml-3"></span>
            </h5>
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        {% for store in stores  %}
                            <li class="list-group-item text-uppercase">
                                <a href="{{ path('store_select',{id:store.id}) }}">
                                    {% if store is not null and store.imageName %}
                                        <img id="logo" class="rounded" src="{{ asset(storePhoto)~store.imageName }}"
                                             alt="{{store.name}}" style="height: 35px;width: 35px">
                                    {% else %}
                                        <img id="logo" class="rounded" src="{{ asset(images)~logo }}"
                                             alt="" style="height: 35px;width: 35px">
                                    {% endif %}
                                    {{ store.name }}
                                    <span class="badge badge-uyblue p-2 float-right">
                                        {{ store.role.title|capitalize }}
                                    </span>
                                </a>
                            </li>
                        {% endfor %}

                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
